#!/usr/bin/env bash
# This script configures an Ubuntu machine to meet the specified requirements for Nginx.

# Update the package repositories and upgrade existing packages
sudo apt-get update
sudo apt-get upgrade -y

# Installing Nginx
sudo apt-get install nginx -y

# Verify Nginx is listening on port 80
netstat -tuln | grep :80

# Create a basic HTML file with the required content
echo "Hello World!" | sudo tee /var/www/html/index.html

# Configure Nginx to return "Hello World!" on root request
echo "
server {
    listen 80;
    server_name _;

    location / {
        root /var/www/html;
        index index.html;
    }
}" | sudo tee /etc/nginx/sites-available/default

# Restart Nginx without using systemctl
sudo /etc/init.d/nginx restart
